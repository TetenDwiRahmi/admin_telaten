<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp">

            <ImageView
                android:id="@+id/FotoItemCK"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_gray" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NamaItemCK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/cambay"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:paddingStart="10dp"
                    android:text="Lorem ipsum dolor lorem ipsum dolor lorem ipsum dolor"
                    android:textColor="@color/colorBlack2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NamaItemCK"
                    android:fontFamily="@font/cambay_bold"
                    android:text="Rp. 0"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/hijau3"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout1"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/JumlahItemCK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cambay"
                    android:paddingStart="10dp"
                    android:text="0 x "
                    android:textColor="@color/colorBlack2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/HargaItemCK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NamaItemCK"
                    android:fontFamily="@font/cambay"
                    android:text="Rp. 0"
                    android:textColor="@color/colorBlack2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/VariasiCK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout2"
                    android:fontFamily="@font/cambay"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:paddingStart="10dp"
                    android:text="Variasi : Pink"
                    android:textColor="@color/colorGray2"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
