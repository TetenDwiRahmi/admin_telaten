<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/line1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/cambay_bold"
            android:id="@+id/txtTambah"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="Tambah kategori baru"
            android:textColor="@color/hijau3"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/cambay_bold"
            android:id="@+id/txtNamaKategori"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text="Nama Kategori"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editNamaKategori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textbox"
            android:fontFamily="@font/cambay"
            android:hint="Masukkan Nama Kategori"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/colorBlack2"
            android:textSize="15dp" />

    </LinearLayout>
</RelativeLayout>