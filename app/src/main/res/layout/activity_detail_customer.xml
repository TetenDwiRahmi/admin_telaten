<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/v_back"
                android:backgroundTint="@color/hijau3"/>

            <TextView
                android:id="@+id/txtNamaCus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="Pelanggan"
                android:textColor="@color/colorBlack2"
                android:textSize="20dp"
                android:fontFamily="@font/cambay_bold"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@id/frame1"
            android:background="@drawable/line_shadow"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/line"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_form"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_cus"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/addimg" />

                <TextView
                    android:id="@+id/txtNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_cus"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Nama Customer"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/cambay_bold"  />

                <TextView
                    android:id="@+id/editNamaCus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtNama"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:text=" Masukkan Nama Customer"
                    android:fontFamily="@font/cambay"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editNamaCus"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/cambay_bold"/>

                <TextView
                    android:id="@+id/editEmailCus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtEmail"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:text="Masukkan Email"
                    android:fontFamily="@font/cambay"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtHpCus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editEmailCus"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="No HP"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/cambay_bold" />

                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHpCus"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editHPCus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text=" Masukkan No HP"
                        android:textSize="15dp"
                        android:fontFamily="@font/cambay"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/btnHp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/inspiration"
                        android:textColor="@color/colorWhite"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editHp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="6"
                        android:inputType="number"
                        android:fontFamily="@font/cambay"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/btnSubmit"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/checked"
                        android:text="Submit"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/btnCancel"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/cancel"
                        android:text="Submit"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtAlamat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Alamat"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/cambay_bold" />

                <LinearLayout
                    android:id="@+id/line4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAlamat"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editAlamat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="Masukan Alamat Lengkap"
                        android:textSize="15sp"
                        android:fontFamily="@font/cambay"/>

                    <ImageView
                        android:id="@+id/btnAlamat"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/inspiration"
                        android:textColor="@color/colorWhite"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line4"
                    android:layout_marginBottom="25dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="6"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="7"
                        android:minLines="4"
                        android:scrollbars="vertical"
                        android:textSize="15sp"
                        android:fontFamily="@font/cambay"/>

                    <ImageView
                        android:id="@+id/btnSubmitAlamat"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/checked"
                        android:text="Submit"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/btnCancelAlamat"
                        android:layout_width="30dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/cancel"
                        android:text="Submit"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/relative1">

            <ImageButton
                android:id="@+id/imgHp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textbox"
                android:backgroundTint="@color/hijau3" />

            <ImageView
                android:id="@+id/imgshop"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/txtAdd"
                android:src="@drawable/whatsapp" />

            <TextView
                android:id="@+id/txtAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:text="Hubungi Pembeli"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/cambay_bold"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>